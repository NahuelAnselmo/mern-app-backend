{
  // ğŸš€ Formatear siempre al guardar
  "editor.formatOnSave": true,

  // ğŸš€ Organizar imports al guardar
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll.eslint": "explicit"
  },

  // ğŸš€ ConfiguraciÃ³n Prettier
  "prettier.singleQuote": true,
  "prettier.semi": true,
  "prettier.trailingComma": "es5",
  "prettier.printWidth": 80,
  "prettier.tabWidth": 2,
  "prettier.jsxSingleQuote": true,

  // ğŸš€ Forzar estilo para JSX/XML: atributos en mÃºltiples lÃ­neas
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },

  // ğŸš€ Estilo de salto de lÃ­nea uniforme
  "files.eol": "\n",

  // ğŸš€ ESLint + Prettier integrados
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}
